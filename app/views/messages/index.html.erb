<h1>Driver Chat!</h1>
<p><%= link_to "back", driver_home_index_path%></p>


<ul>
  <% @dispatch_messages.each do | message | %>
    <li>
      <%= message.content %>
      <%= message.message_type %>
      <%= if message.staff_id == nil then "Me" else "Staff" end %>
      <%= message.driver_id %>
    </li>
  <% end %>
</ul>

<%= form_with model: @message do |form| %>
  <div>
    <%= form.hidden_field :message_type, value:"D" %>
    <%= form.label :content %><br>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<ul>
  <% @area_messages.each do | message | %>
    <li>
      <%= message.content %>
      <%= message.driver_id %>
    </li>
  <% end %>
</ul>

<%= form_with model: @message do |form| %>
  <div>
    <%= form.hidden_field :message_type, value:"A" %>
    <%= form.label :content %><br>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>